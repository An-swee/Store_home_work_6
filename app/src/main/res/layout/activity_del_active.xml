<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steven.hw6.delActive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deltext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="刪除店家"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="欲刪除店名："
            android:textSize="20dp" />

        <EditText
            android:id="@+id/del_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType=""
            android:ems="10"
             />

        <Button
            android:id="@+id/search_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="search_store"
            android:text="查詢欲刪除店家詳細資料" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="del"
                android:text="刪除店舖" />

            <Button
                android:id="@+id/notdel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="notdel"
                android:text="取消刪除" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
